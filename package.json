{
  "name": "cursor-toys",
  "displayName": "CursorToys",
  "description": "ðŸš€ Supercharge your Cursor AI workflow! Share commands instantly, test APIs in-editor, manage personal libraries, and boost team collaboration. The ultimate productivity toolkit for Cursor users.",
  "version": "1.0.0",
  "publisher": "godrix",
  "icon": "resources/icon.png",
  "author": {
    "name": "Godrix"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/godrix/cursor-toys.git"
  },
  "bugs": {
    "url": "https://github.com/godrix/cursor-toys/issues"
  },
  "homepage": "https://github.com/godrix/cursor-toys#readme",
  "keywords": [
    "cursor",
    "cursor-ai",
    "cursor-toys",
    "ai-assistant",
    "productivity",
    "deeplink",
    "share",
    "collaboration",
    "team",
    "commands",
    "rules",
    "prompts",
    "http",
    "rest",
    "api",
    "testing",
    "chat",
    "workflow"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage",
    "onUri",
    "onCommand:cursor-toys.generate",
    "onCommand:cursor-toys.generate-command",
    "onCommand:cursor-toys.generate-rule",
    "onCommand:cursor-toys.generate-prompt",
    "onCommand:cursor-toys.import",
    "onCommand:cursor-toys.save-as-user-command",
    "onCommand:cursor-toys.save-as-user-prompt",
    "onView:cursor-toys.userCommands",
    "onView:cursor-toys.userPrompts",
    "onCommand:cursor-toys.sendToChat",
    "onCommand:cursor-toys.sendSelectionToChat",
    "onCommand:cursor-toys.copySelectionAsPrompt",
    "onCommand:cursor-toys.sendHttpRequest",
    "onCommand:cursor-toys.minifyFile",
    "onCommand:cursor-toys.trimClipboard",
    "onCommand:cursor-toys.trimClipboardWithPrompt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-toys.generate",
        "title": "CursorToys: Generate Share Link"
      },
      {
        "command": "cursor-toys.generate-command",
        "title": "CursorToys: Generate Command Share Link"
      },
      {
        "command": "cursor-toys.generate-rule",
        "title": "CursorToys: Generate Rule Share Link"
      },
      {
        "command": "cursor-toys.generate-prompt",
        "title": "CursorToys: Generate Prompt Share Link"
      },
      {
        "command": "cursor-toys.import",
        "title": "CursorToys: Import from Share Link"
      },
      {
        "command": "cursor-toys.save-as-user-command",
        "title": "CursorToys: Save as Personal Command"
      },
      {
        "command": "cursor-toys.save-as-user-prompt",
        "title": "CursorToys: Save as Personal Prompt"
      },
      {
        "command": "cursor-toys.openUserCommand",
        "title": "CursorToys: Open Command",
        "icon": "$(file)"
      },
      {
        "command": "cursor-toys.generateUserCommandDeeplink",
        "title": "CursorToys: Generate Command Share Link"
      },
      {
        "command": "cursor-toys.deleteUserCommand",
        "title": "CursorToys: Delete Command"
      },
      {
        "command": "cursor-toys.revealUserCommand",
        "title": "CursorToys: Reveal Command in Folder"
      },
      {
        "command": "cursor-toys.renameUserCommand",
        "title": "CursorToys: Rename Command"
      },
      {
        "command": "cursor-toys.refreshUserCommands",
        "title": "CursorToys: Refresh Commands",
        "icon": "$(refresh)"
      },
      {
        "command": "cursor-toys.openUserPrompt",
        "title": "CursorToys: Open Prompt",
        "icon": "$(file)"
      },
      {
        "command": "cursor-toys.generateUserPromptDeeplink",
        "title": "CursorToys: Generate Prompt Share Link"
      },
      {
        "command": "cursor-toys.deleteUserPrompt",
        "title": "CursorToys: Delete Prompt"
      },
      {
        "command": "cursor-toys.revealUserPrompt",
        "title": "CursorToys: Reveal Prompt in Folder"
      },
      {
        "command": "cursor-toys.renameUserPrompt",
        "title": "CursorToys: Rename Prompt"
      },
      {
        "command": "cursor-toys.refreshUserPrompts",
        "title": "CursorToys: Refresh Prompts",
        "icon": "$(refresh)"
      },
      {
        "command": "cursor-toys.sendToChat",
        "title": "CursorToys: Send Text to Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "cursor-toys.sendSelectionToChat",
        "title": "CursorToys: Send Selection to Chat",
        "icon": "$(send)"
      },
      {
        "command": "cursor-toys.copySelectionAsPrompt",
        "title": "CursorToys: Copy Selection as Prompt Link",
        "icon": "$(copy)"
      },
      {
        "command": "cursor-toys.sendHttpRequest",
        "title": "CursorToys: Execute HTTP Request",
        "icon": "$(send)"
      },
      {
        "command": "cursor-toys.copyCurlCommand",
        "title": "CursorToys: Copy as cURL Command",
        "icon": "$(copy)"
      },
      {
        "command": "cursor-toys.selectEnvironment",
        "title": "CursorToys: Select HTTP Environment"
      },
      {
        "command": "cursor-toys.openEnvironments",
        "title": "CursorToys: Open HTTP Environments Folder"
      },
      {
        "command": "cursor-toys.createEnvironment",
        "title": "CursorToys: Create New HTTP Environment"
      },
      {
        "command": "cursor-toys.initializeEnvironments",
        "title": "CursorToys: Create Environments Folder"
      },
      {
        "command": "cursor-toys.minifyFile",
        "title": "CursorToys: Minify File",
        "icon": "$(file-zip)"
      },
      {
        "command": "cursor-toys.trimClipboard",
        "title": "CursorToys: Trim & Minify Clipboard",
        "icon": "$(clippy)"
      },
      {
        "command": "cursor-toys.trimClipboardWithPrompt",
        "title": "CursorToys: Trim & Minify Clipboard (Select Type)",
        "icon": "$(clippy)"
      }
    ],
    "submenus": [
      {
        "id": "cursor-toys",
        "label": "Cursor Toys"
      },
      {
        "id": "cursor-toys-selection",
        "label": "Cursor Toys"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cursor-toys.userCommands",
          "name": "Personal Commands",
          "when": "true"
        },
        {
          "id": "cursor-toys.userPrompts",
          "name": "Personal Prompts",
          "when": "true"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "submenu": "cursor-toys",
          "when": "resourcePath =~ /(\\.(cursor|claude|vscode|ai)\\/(commands|rules|prompts)\\/)/",
          "group": "navigation"
        },
        {
          "command": "cursor-toys.initializeEnvironments",
          "when": "explorerResourceIsFolder && resourcePath =~ /\\.(cursor|vscode|ai)\\/http$/",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cursor-toys.refreshUserCommands",
          "when": "view == cursor-toys.userCommands",
          "group": "navigation"
        },
        {
          "command": "cursor-toys.refreshUserPrompts",
          "when": "view == cursor-toys.userPrompts",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cursor-toys.openUserCommand",
          "when": "view == cursor-toys.userCommands && viewItem == userCommandFile",
          "group": "inline"
        },
        {
          "command": "cursor-toys.generateUserCommandDeeplink",
          "when": "view == cursor-toys.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.renameUserCommand",
          "when": "view == cursor-toys.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.revealUserCommand",
          "when": "view == cursor-toys.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.deleteUserCommand",
          "when": "view == cursor-toys.userCommands && viewItem == userCommandFile",
          "group": "2_actions"
        },
        {
          "command": "cursor-toys.openUserPrompt",
          "when": "view == cursor-toys.userPrompts && viewItem == userPromptFile",
          "group": "inline"
        },
        {
          "command": "cursor-toys.generateUserPromptDeeplink",
          "when": "view == cursor-toys.userPrompts && viewItem == userPromptFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.renameUserPrompt",
          "when": "view == cursor-toys.userPrompts && viewItem == userPromptFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.revealUserPrompt",
          "when": "view == cursor-toys.userPrompts && viewItem == userPromptFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.deleteUserPrompt",
          "when": "view == cursor-toys.userPrompts && viewItem == userPromptFile",
          "group": "2_actions"
        }
      ],
      "cursor-toys": [
        {
          "command": "cursor-toys.generate-command",
          "when": "resourcePath =~ /\\.(cursor|claude|vscode|ai)\\/commands\\//"
        },
        {
          "command": "cursor-toys.generate-rule",
          "when": "resourcePath =~ /\\.(cursor|vscode|ai)\\/rules\\//"
        },
        {
          "command": "cursor-toys.generate-prompt",
          "when": "resourcePath =~ /\\.(cursor|vscode|ai)\\/prompts\\//"
        },
        {
          "command": "cursor-toys.generate",
          "when": "resourcePath =~ /(\\.(cursor|claude|vscode|ai)\\/(commands|rules|prompts)\\/)/"
        },
        {
          "command": "cursor-toys.save-as-user-command",
          "when": "resourcePath =~ /\\.(cursor|claude|vscode|ai)\\/commands\\//"
        },
        {
          "command": "cursor-toys.save-as-user-prompt",
          "when": "resourcePath =~ /\\.(cursor|vscode|ai)\\/prompts\\//"
        }
      ],
      "editor/context": [
        {
          "submenu": "cursor-toys-selection",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "cursor-toys.minifyFile",
          "when": "resourceExtname =~ /\\.(json|html|htm|xml|css|svg|js|jsx|ts|tsx)$/",
          "group": "cursorToys@1"
        }
      ],
      "cursor-toys-selection": [
        {
          "command": "cursor-toys.sendSelectionToChat",
          "when": "editorHasSelection"
        },
        {
          "command": "cursor-toys.copySelectionAsPrompt",
          "when": "editorHasSelection"
        }
      ],
      "editor/title": [
        {
          "command": "cursor-toys.minifyFile",
          "when": "resourceExtname =~ /\\.(json|html|htm|xml|css|svg|js|jsx|ts|tsx)$/",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "cursor-toys.sendSelectionToChat",
          "when": "editorHasSelection"
        },
        {
          "command": "cursor-toys.minifyFile",
          "when": "editorIsOpen"
        },
        {
          "command": "cursor-toys.trimClipboard",
          "when": "true"
        },
        {
          "command": "cursor-toys.trimClipboardWithPrompt",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Cursor Toys",
      "properties": {
        "cursorToys.linkType": {
          "type": "string",
          "enum": [
            "deeplink",
            "web",
            "custom"
          ],
          "enumDescriptions": [
            "Use cursor:// protocol (deeplink)",
            "Use web URL https://cursor.com/link/",
            "Use a custom base URL (configure in cursorToys.customBaseUrl)"
          ],
          "default": "deeplink",
          "description": "Type of link to generate"
        },
        "cursorToys.customBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Custom base URL for deeplinks (only used when linkType is 'custom'). Example: https://example.com/link/ or custom://protocol/"
        },
        "cursorToys.allowedExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "md",
            "mdc"
          ],
          "description": "Allowed file extensions (without the dot, e.g., md, mdc, txt, json). For rules, .mdc is recommended to support metadata."
        },
        "cursorToys.baseFolder": {
          "type": "string",
          "default": "cursor",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Base folder name for storing commands, rules, prompts and HTTP files (e.g., 'cursor', 'vscode', 'ai'). Note: Rules and prompts are Cursor-specific features."
        },
        "cursorToys.commandsFolder": {
          "type": "string",
          "enum": [
            "cursor",
            "claude"
          ],
          "enumDescriptions": [
            "Use .cursor/commands folder (default)",
            "Use .claude/commands folder"
          ],
          "default": "cursor",
          "description": "Folder to save commands: 'cursor' for .cursor/commands or 'claude' for .claude/commands. Only the commands folder is configurable; rules and prompts always use .cursor"
        },
        "cursorToys.personalCommandsView": {
          "type": "string",
          "enum": [
            "both",
            "cursor",
            "claude"
          ],
          "enumDescriptions": [
            "Show commands from both .cursor and .claude folders",
            "Show commands from .cursor folder only",
            "Show commands from .claude folder only"
          ],
          "default": "both",
          "description": "Which command folders to show in Personal Commands view: 'both' for .cursor and .claude, 'cursor' for .cursor only, or 'claude' for .claude only"
        },
        "cursorToys.httpRequestTimeout": {
          "type": "number",
          "default": 10,
          "description": "Timeout in seconds for HTTP requests (default: 10 seconds)"
        },
        "cursorToys.httpRequestSaveFile": {
          "type": "boolean",
          "default": false,
          "description": "Save HTTP response to file. If false, only shows preview without saving."
        },
        "cursorToys.httpDefaultEnvironment": {
          "type": "string",
          "default": "dev",
          "description": "Default HTTP environment name (used for reference in status bar)"
        },
        "cursorToys.minify.preserveComments": {
          "type": "boolean",
          "default": false,
          "description": "Preserve comments when minifying code (currently not implemented)"
        },
        "cursorToys.minify.outputSuffix": {
          "type": "string",
          "default": ".min",
          "description": "Suffix for minified files (e.g., '.min' creates 'file.min.js')"
        }
      }
    },
    "languages": [
      {
        "id": "http-request",
        "aliases": [
          "HTTP Request",
          "http-request"
        ],
        "extensions": [
          ".req",
          ".request"
        ]
      },
      {
        "id": "http-response",
        "aliases": [
          "HTTP Response",
          "http-response"
        ],
        "extensions": [
          ".res",
          ".response"
        ]
      }
    ],
    "grammars": [
      {
        "language": "http-request",
        "scopeName": "text.http-request",
        "path": "./syntaxes/http-request.tmLanguage.json"
      },
      {
        "language": "http-response",
        "scopeName": "text.http-response",
        "path": "./syntaxes/http-response.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "cursor-toys.import",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "uriHandlers": [
      {
        "id": "cursor-toys",
        "scheme": "cursor",
        "host": "godrix.cursor-toys"
      },
      {
        "id": "vscode-cursor-toys",
        "scheme": "vscode",
        "host": "godrix.cursor-toys"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}

