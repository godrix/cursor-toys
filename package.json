{
  "name": "cursor-deeplink",
  "displayName": "Cursor Toys",
  "description": "Your AI coding assistant - Generate and import deeplinks for Cursor commands, rules, and prompts files, send code to chat, and more",
  "version": "0.6.0",
  "publisher": "godrix",
  "icon": "resources/icon.png",
  "author": {
    "name": "Godrix"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/godrix/cursor-deeplink.git"
  },
  "bugs": {
    "url": "https://github.com/godrix/cursor-deeplink/issues"
  },
  "homepage": "https://github.com/godrix/cursor-deeplink#readme",
  "keywords": [
    "cursor",
    "deeplink",
    "commands",
    "rules",
    "prompts",
    "share",
    "collaboration"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage",
    "onUri",
    "onCommand:cursor-toys.generate",
    "onCommand:cursor-toys.generate-command",
    "onCommand:cursor-toys.generate-rule",
    "onCommand:cursor-toys.generate-prompt",
    "onCommand:cursor-toys.import",
    "onCommand:cursor-toys.save-as-user-command",
    "onView:cursor-deeplink.userCommands",
    "onCommand:cursor-toys.sendToChat",
    "onCommand:cursor-toys.sendSelectionToChat",
    "onCommand:cursor-toys.copySelectionAsPrompt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-toys.generate",
        "title": "Generate Cursor Toys"
      },
      {
        "command": "cursor-toys.generate-command",
        "title": "Generate Cursor Toys Command"
      },
      {
        "command": "cursor-toys.generate-rule",
        "title": "Generate Cursor Toys Rule"
      },
      {
        "command": "cursor-toys.generate-prompt",
        "title": "Generate Cursor Toys Prompt"
      },
      {
        "command": "cursor-toys.import",
        "title": "Import Cursor Toys"
      },
      {
        "command": "cursor-toys.save-as-user-command",
        "title": "Save as User Command"
      },
      {
        "command": "cursor-toys.openUserCommand",
        "title": "Open Command",
        "icon": "$(file)"
      },
      {
        "command": "cursor-toys.generateUserCommandDeeplink",
        "title": "Generate Deeplink"
      },
      {
        "command": "cursor-toys.deleteUserCommand",
        "title": "Delete Command"
      },
      {
        "command": "cursor-toys.revealUserCommand",
        "title": "Reveal in Folder"
      },
      {
        "command": "cursor-toys.renameUserCommand",
        "title": "Rename Command"
      },
      {
        "command": "cursor-toys.refreshUserCommands",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "cursor-toys.sendToChat",
        "title": "Send to Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "cursor-toys.sendSelectionToChat",
        "title": "Send Selection to Chat",
        "icon": "$(send)"
      },
      {
        "command": "cursor-toys.copySelectionAsPrompt",
        "title": "Copy as Prompt Deeplink",
        "icon": "$(copy)"
      }
    ],
    "submenus": [
      {
        "id": "cursor-deeplink",
        "label": "Cursor Toys"
      },
      {
        "id": "cursor-toys-selection",
        "label": "Cursor Toys"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cursor-deeplink.userCommands",
          "name": "Personal Commands",
          "when": "true"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "submenu": "cursor-deeplink",
          "when": "resourcePath =~ /(\\.(cursor|claude)\\/(commands|rules|prompts)\\/)/",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cursor-toys.refreshUserCommands",
          "when": "view == cursor-deeplink.userCommands",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cursor-toys.openUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "inline"
        },
        {
          "command": "cursor-toys.generateUserCommandDeeplink",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.renameUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.revealUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "1_actions"
        },
        {
          "command": "cursor-toys.deleteUserCommand",
          "when": "view == cursor-deeplink.userCommands && viewItem == userCommandFile",
          "group": "2_actions"
        }
      ],
      "cursor-deeplink": [
        {
          "command": "cursor-toys.generate-command",
          "when": "resourcePath =~ /\\.(cursor|claude)\\/commands\\//"
        },
        {
          "command": "cursor-toys.generate-rule",
          "when": "resourcePath =~ /\\.cursor\\/rules\\//"
        },
        {
          "command": "cursor-toys.generate-prompt",
          "when": "resourcePath =~ /\\.cursor\\/prompts\\//"
        },
        {
          "command": "cursor-toys.generate",
          "when": "resourcePath =~ /(\\.(cursor|claude)\\/(commands|rules|prompts)\\/)/"
        },
        {
          "command": "cursor-toys.save-as-user-command",
          "when": "resourcePath =~ /\\.(cursor|claude)\\/commands\\//"
        }
      ],
      "editor/context": [
        {
          "submenu": "cursor-toys-selection",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "cursor-toys-selection": [
        {
          "command": "cursor-toys.sendSelectionToChat",
          "when": "editorHasSelection"
        },
        {
          "command": "cursor-toys.copySelectionAsPrompt",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "cursor-toys.sendSelectionToChat",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Cursor Toys",
      "properties": {
        "cursorDeeplink.linkType": {
          "type": "string",
          "enum": [
            "deeplink",
            "web",
            "custom"
          ],
          "enumDescriptions": [
            "Use cursor:// protocol (deeplink)",
            "Use web URL https://cursor.com/link/",
            "Use a custom base URL (configure in cursorDeeplink.customBaseUrl)"
          ],
          "default": "deeplink",
          "description": "Type of link to generate"
        },
        "cursorDeeplink.customBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Custom base URL for deeplinks (only used when linkType is 'custom'). Example: https://example.com/link/ or custom://protocol/"
        },
        "cursorDeeplink.allowedExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "md",
            "mdc"
          ],
          "description": "Allowed file extensions (without the dot, e.g., md, mdc, txt, json). For rules, .mdc is recommended to support metadata."
        },
        "cursorDeeplink.commandsFolder": {
          "type": "string",
          "enum": [
            "cursor",
            "claude"
          ],
          "enumDescriptions": [
            "Use .cursor/commands folder (default)",
            "Use .claude/commands folder"
          ],
          "default": "cursor",
          "description": "Folder to save commands: 'cursor' for .cursor/commands or 'claude' for .claude/commands. Only the commands folder is configurable; rules and prompts always use .cursor"
        },
        "cursorDeeplink.personalCommandsView": {
          "type": "string",
          "enum": [
            "both",
            "cursor",
            "claude"
          ],
          "enumDescriptions": [
            "Show commands from both .cursor and .claude folders",
            "Show commands from .cursor folder only",
            "Show commands from .claude folder only"
          ],
          "default": "both",
          "description": "Which command folders to show in Personal Commands view: 'both' for .cursor and .claude, 'cursor' for .cursor only, or 'claude' for .claude only"
        }
      }
    },
    "keybindings": [
      {
        "command": "cursor-toys.import",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "uriHandlers": [
      {
        "id": "cursor-deeplink",
        "scheme": "cursor",
        "host": "godrix.cursor-deeplink"
      },
      {
        "id": "vscode-cursor-deeplink",
        "scheme": "vscode",
        "host": "godrix.cursor-deeplink"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}

